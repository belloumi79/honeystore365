# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NODE_ENV=production

# Vercel Configuration
VERCEL=1

# Analytics and Monitoring
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# PDF Generation (for invoice generation)
# These are automatically handled by @sparticuz/chromium on Vercel
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# AI/Genkit Configuration (if using AI features)
GENKIT_ENV=production
GOOGLE_GENAI_API_KEY=your_google_genai_api_key

# Optional: Email Service (if using)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key
FROM_EMAIL=noreply@your-domain.com

# Optional: Payment Gateway (if using)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# Optional: Cache Configuration (if using)
REDIS_URL=your_redis_url

# Optional: File Upload (if using)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
